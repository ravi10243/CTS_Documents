<aura:component implements="forceCommunity:availableForAllPageTypes" controller="AGN_CustomerAccountDetailController" access="global" >
    <aura:attribute name="addresses" type="AGN_CustomerAccountDetailController.AddressWrapper[]"/>
    <aura:attribute name="shipToCount" type="integer"/>
    <aura:attribute name="billToCount" type="integer"/>
    <aura:attribute name="showBillTo" type="boolean"/>
    <aura:handler name="init" value="{!this}" action="{!c.init}" />
    
    <div class="basic_details">
			<div class="hd">{!$Label.c.AGN_OAM_Body_Sold_To}</div>
			<li class="sold_to" style="width:100%;">                
                <aura:iteration items="{!v.addresses}" var="soldTo">
                <aura:renderIf isTrue="{!soldTo.accountType == 'SoldTo'}">
				<div class="sold">
					<div class="sold_p">
						<p>{!soldTo.accountName}</p>
						<div class="sold_text wordwrap">{!soldTo.streetName}, {!soldTo.houseNumber}, {!soldTo.accountAddress.City_vod__c} <br/>
                        	{!soldTo.accountAddress.State_vod__c}, {!soldTo.accountAddress.Zip_vod__c}</div>
						<div class="acc_details">
							<div class="phone_acc"></div>
							<div class="div_acc"></div>
							<div class="text_acc">{!soldTo.accountAddress.Phone_vod__c}</div>
						</div>
						<div class="acc_details">
							<div class="msg_acc"></div>
							<div class="div_acc"></div>
							<div class="text_acc">{!soldTo.accountAddress.Email_AGN__c}</div>
						</div>
					</div>
					<div class="sold_btm">                       
                        <div class="edit_acc"><a href="" onclick="{!c.gotoURL}" data-address="{!soldTo.accountAddress.Id}" data-type="SoldTo" data-activity = "edit" >{!$Label.c.AGN_OAM_Body_Edit_Address}</a></div>
						<!--<div class="delete_acc">Delete</div>-->
					</div>
				</div>
                </aura:renderIf>
                </aura:iteration>
			</li> 
        	<div class="hd">{!$Label.c.AGN_OAM_Body_Ship_To}</div>
			<li class="sold_to sold_to_thumb" style="width:100%;">
				<div class="fixed-bar">
                    <div class="elastislide-wrapper elastislide-horizontal">
                        <div class="elastislide-carousel">
					<!-- Elastislide Carousel -->
                    <ul id="carousel" class="elastislide-list">	                        
                        <aura:renderIf isTrue="{!v.shipToCount == 0}">
                            {!$Label.c.AGN_OAM_Body_SameAsSoldTo}
                        </aura:renderIf>
                        <aura:iteration items="{!v.addresses}" var="shipTo">
                        <aura:renderIf isTrue="{!shipTo.accountType == 'ShipTo'}">
						<li>
							<div class="sold sold_first">
								<div class="sold_p">
									<p>{!shipTo.accountName}</p>
                                    <div class="sold_text wordwrap">{!shipTo.accountAddress.Name}, {!shipTo.accountAddress.City_vod__c} <br/>
                                        {!shipTo.accountAddress.State_vod__c}, {!shipTo.accountAddress.Zip_vod__c}</div>
                                    <div class="acc_details">
                                        <div class="phone_acc"></div>
                                        <div class="div_acc"></div>
                                        <div class="text_acc">{!shipTo.accountAddress.Phone_vod__c}</div>
                                    </div>
                                    <div class="acc_details">
                                        <div class="msg_acc"></div>
                                        <div class="div_acc"></div>
                                        <div class="text_acc">{!shipTo.accountAddress.Email_AGN__c}</div>
                                    </div>
								</div>
								<div class="sold_btm">
                                    <div class="edit_acc"><a href="" onclick="{!c.gotoURL}" data-address="{!shipTo.accountAddress.Id}" data-type="ShipTo" data-activity = "edit">{!$Label.c.AGN_OAM_Body_Edit_Address}</a></div>

                                    <div class="delete_acc"><a href="" onclick="{!c.gotoURL}" data-address="{!shipTo.accountAddress.Id}" data-type="ShipTo" data-activity = "delete">{!$Label.c.AGN_OAM_Body_Delete_Address}</a></div>
									<!-- <div class="delete_acc"><ui:outputURL label="Delete" click="{!c.gotoURL}" /></div> -->
								</div>
							</div>
						</li>
                        </aura:renderIf>
                        </aura:iteration>
					</ul>
                    </div>
                        </div>
					<!-- End Elastislide Carousel -->
                    
                    <ui:button aura:id="button" class="add_btn continue_btn" label="{!$Label.c.AGN_OAM_Body_Add_New_Address}" press="{!c.newShipTo}"/>					
			</div>
			</li>
        	<aura:renderIf isTrue="{!v.showBillTo}">
			<div class="hd">{!$Label.c.AGN_OAM_Body_Bill_To}</div>
			<li class="sold_to sold_to_thumb" style="width:100%;">
				<div class="fixed-bar">
                    <div class="elastislide-wrapper elastislide-horizontal">
                        <div class="elastislide-carousel">
					<!-- Elastislide Carousel -->
					<ul id="carousel1" class="elastislide-list">
                        <aura:renderIf isTrue="{!v.billToCount == 0}">
                            {!$Label.c.AGN_OAM_Body_SameAsSoldTo}
                        </aura:renderIf>
                        <aura:iteration items="{!v.addresses}" var="billTo">
                        <aura:renderIf isTrue="{!billTo.accountType == 'BillTo'}">
						<li>
							<div class="sold sold_first">
								<div class="sold_p">
									<p>{!billTo.accountName}</p>
                                    <div class="sold_text wordwrap">{!billTo.accountAddress.Name}, {!billTo.accountAddress.City_vod__c} <br/>
                                        {!billTo.accountAddress.State_vod__c}, {!billTo.accountAddress.Zip_vod__c}</div>
                                    <div class="acc_details">
                                        <div class="phone_acc"></div>
                                        <div class="div_acc"></div>
                                        <div class="text_acc">{!billTo.accountAddress.Phone_vod__c}</div>
                                    </div>
                                    <div class="acc_details">
                                        <div class="msg_acc"></div>
                                        <div class="div_acc"></div>
                                        <div class="text_acc">{!billTo.accountAddress.Email_AGN__c}</div>
                                    </div>
								</div>
								<div class="sold_btm">
									<div class="edit_acc"><a href="" onclick="{!c.gotoURL}" data-address="{!billTo.accountAddress.Id}" data-type="BillTo" data-activity = "edit">{!$Label.c.AGN_OAM_Body_Edit_Address}</a></div>
                                    <div class="delete_acc"><a href="" onclick="{!c.gotoURL}" data-address="{!billTo.accountAddress.Id}" data-type="BillTo" data-activity = "delete">{!$Label.c.AGN_OAM_Body_Delete_Address}</a></div>
									<!-- <div class="delete_acc"><ui:outputURL label="Delete" click="{!c.gotoURL}" /></div> -->
								</div>
							</div>
						</li>
                        </aura:renderIf>
                        </aura:iteration>
					</ul>
                        </div>
                    </div>
					<!-- End Elastislide Carousel -->
                    <ui:button aura:id="button" class="add_btn continue_btn" label="{!$Label.c.AGN_OAM_Body_Add_New_Address}" press="{!c.newBillTo}"/>					
			</div>
			</li>
            </aura:renderIf>
    </div>    
     <ltng:require styles="{!$Resource.AGN_CustomerAccount + '/css/elastislide.css'}" scripts="{!join(',',
								$Resource.AGN_CustomerPortalModernizr, $Resource.AGN_CustomerPortalJQuery)}" afterScriptsLoaded="{!c.scriptsLoaded}"/>
</aura:component>