<aura:component controller="AGN_ICL_SendEmailCtrl" implements="flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes" access="global">
	<ltng:require styles="{!$Resource.AGN_ICL_SLDS_270 +'/styles/salesforce-lightning-design-system.min.css'}"/>
	<aura:attribute name="notify" type="string" default=""/>
	<aura:attribute name="searchEmail" type="string"/>
