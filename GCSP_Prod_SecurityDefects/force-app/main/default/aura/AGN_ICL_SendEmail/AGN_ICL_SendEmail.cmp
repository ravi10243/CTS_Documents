	<div>
           <aura:if isTrue="{!v.showGTM}">
              <iframe aura:id="vfFrame" style="display:none;visibility:hidden" src="{!$Label.c.AGN_ICL_GTMPageRedirction+'?type=optout&amp;emailsend='+v.fireGTM+'&amp;curl='+v.GTMPageURL+'&amp;ctitle='+v.GTMPageTitle+'&amp;country='+v.GTMCountry}"/>
       </aura:if>
		<div class="row opt_out_instruction">
			<h4 class="section-text">{!$Label.c.AGN_ICL_Send_Opt_out_instructions}</h4>
			<div class="emailform">
				<div class="emailformblk">
					<label class="opt-email-label">{!$Label.c.AGN_ICL_Email}</label>
				</div>
				<div class="emailformblk">
					{!v.notify}
					<div class="form-group input-effect">
						<lightning:input type="string" value="{!v.searchEmail}">
							<label>{!$Label.c.AGN_ICL_Send_Opt_out_instructions}</label>
						</lightning:input>
					</div>
					<span class="helper_txt">{!$Label.c.AGN_ICL_SendEmail_help_Text}</span>
				</div>
				<div class="emailformblk">
					<ui:button class="reg-submit btn btnSubmit" label="{!$Label.c.AGN_ICL_Submit_Forgot_Password}" press="{!c.sendEmailToContact}"/>
				</div>
			</div>
		</div>
	</div>
</aura:component>