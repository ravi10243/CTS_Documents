<aura:component >
  <!--use boolean attribute for Store true/false value,
    make default to "false" so modal box are not display on the load of component.
-->
    <aura:attribute name="title" type="String" />
    <!-- <aura:attribute name="modalFooter" type="Aura.Component[]" /> -->
    <aura:attribute name="isOpen" type="Boolean" default="false" />
    <aura:attribute name="class" type="String" />
    <aura:attribute name="primaryAction" type="Aura.Action" />
    <aura:attribute name="primaryActionRenderIf" type="Boolean" default="true" />
    <aura:attribute name="primaryActionLabel" type="String" />
    <aura:attribute name="primaryActionClass" type="String" />

<!--Use "slds-m-around- -xx-large" class to add standard Large padding to the component-->
<div class="slds-m-around--xx-large">

    <!--Use aura:if tag to display Model Box, on the bese of conditions. [isOpen boolean attribute] -->
    <aura:if isTrue="{!v.isOpen}">

        <!--###### MODAL BOX Start From Here ######-->
        <div role="dialog" tabindex="-1" aria-labelledby="header99" class="{! 'slds-modal slds-fade-in-open ' + v.class}">
            <div class="slds-modal__container">
                <!-- ###### MODAL BOX HEADER Part Start From Here ######-->
                <div class="slds-modal__header">
                    <!-- <lightning:icon iconName="utility:close" title="Close" class="slds-button slds-modal__close slds-button-icon-inverse" />-->
                    <button class="slds-button slds-modal__close slds-button--icon-inverse" title="Close" onclick="{!c.closeModal}">
                        <lightning:icon iconName="utility:close" title="Close" variant="inverse" />
                        <span class="slds-assistive-text">Close</span>
                    </button>
                    <h2 id="header99" class="slds-text-heading--medium">{!v.title}</h2>
                </div>
                <!--###### MODAL BOX BODY Part Start From Here ######-->
                <div class="slds-modal__content slds-p-around--medium">
                    {!v.body}
                </div>
                <!--###### MODAL BOX FOOTER Part Start From Here ######-->
                <aura:if isTrue="{!v.primaryActionRenderIf == true}">
                    <div class="slds-modal__footer">
                        <!-- <lightning:button label="Cancel" onclick="{!v.closeModal}" class="slds-button slds-button-neutral" /> -->
                        <lightning:button label="{!v.primaryActionLabel}" onclick="{!v.primaryAction}" class="{!'slds-button slds-button-brand ' + v.primaryActionClass}" />
                    </div>
                </aura:if>
            </div>
        </div>
        <div class="slds-backdrop slds-backdrop--open"></div>
        <!--###### MODAL BOX Part END Here ######-->

    </aura:if>
</div>
</aura:component>